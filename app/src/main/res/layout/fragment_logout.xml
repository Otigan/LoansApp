<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.LogoutDialogFragment">


    <TextView
        android:id="@+id/txt_view_logout_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вы действительно хотите выйти из аккаунта?"
        android:textAlignment="center"
        android:textColor="?MainTextViewColor"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/barrier_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:barrierDirection="top"
        app:constraint_referenced_ids="btn_logout,btn_cancel_logout"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Да"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_cancel_logout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_view_logout_message" />


    <Button
        android:id="@+id/btn_cancel_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Нет"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_logout"
        app:layout_constraintTop_toBottomOf="@id/txt_view_logout_message" />

</androidx.constraintlayout.widget.ConstraintLayout>