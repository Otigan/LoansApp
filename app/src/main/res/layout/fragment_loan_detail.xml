<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.loan.LoanDetailFragment">


    <TextView
        android:id="@+id/txt_loan_detail_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?MainTextViewColor"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/card_view_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="@string/txt_loan_detail_status_approved" />


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@id/txt_loan_detail_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_loan_detail_status">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_amount_loan_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?MainTextViewColor"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_date_loan_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?MainTextViewColor"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_percent_loan_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?MainTextViewColor"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_period_loan_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?MainTextViewColor"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_status_loan_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?MainTextViewColor"
                android:textSize="15sp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_loan_detail_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="?MainTextViewColor"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_view_details" />


</androidx.constraintlayout.widget.ConstraintLayout>